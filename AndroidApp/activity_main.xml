<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="300">

    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:onClick="startBluetooth"
        android:text="@string/Start"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:onClick="searchBluetooth"
        android:text="@string/Search"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/connect_button"
        android:text="@string/Connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:enabled="false"
        android:onClick="connectBluetooth"
        />

    <Button
        android:id="@+id/discoverSvc_button"
        android:text= "@string/DiscoverServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:enabled="false"
        android:onClick="discoverServices"
        />


    <Button
        android:id="@+id/disconnect_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:onClick="Disconnect"
        android:text="@string/Disconnect"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:text="Cool White LEDs" />

    <SeekBar
        android:id="@+id/seekBarCW"
        android:text="@string/CoolWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:max="255"
        android:enabled="false" />

    <TextView
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:text="Warm White LEDs" />

    <SeekBar
        android:id="@+id/seekBarWW"
        android:text="@string/WarmWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:max="255"
        android:enabled="false" />

    <TextView
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:text="Red LEDs" />

    <SeekBar
        android:id="@+id/seekBarR"
        android:text="@string/Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:max="255"
        android:enabled="false" />

    <TextView
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:text="Green LEDs" />

    <SeekBar
        android:id="@+id/seekBarG"
        android:text="@string/Green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:max="255"
        android:enabled="false"/>

    <TextView
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:text="Blue LEDs" />

    <SeekBar
        android:id="@+id/seekBarB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:max="255"
        android:text="@string/Blue"
        android:textAllCaps="false" />

    <Switch
        android:id="@+id/led_switchR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:enabled="false"
        android:paddingStart="12dp"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingEnd="12dp"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:switchPadding="12dp"
        android:text="@string/RedLED" />


</LinearLayout>
